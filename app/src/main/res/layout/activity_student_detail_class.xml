<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:orientation="vertical"
    android:background="#EEEEEE"
    tools:context=".StudentDetailClassActivity">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:backgroundTint="@null"
        android:background="@color/white">

        <Button
            android:id="@+id/btn_back"
            app:backgroundTint="@null"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:layout_centerVertical="true"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="My Classes"/>

        <ImageButton
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:id="@+id/chat_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/message"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="10dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="350dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:background="@drawable/edittext_border"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/class_code_and_name"
            android:backgroundTint="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="50dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="SE330.O22 - Lap Trinh Java" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/class_gv"
            android:backgroundTint="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="50dp"
            android:layout_centerVertical="true"
            android:textSize="18dp"
            android:text="GVLT: " />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/class_lecture"
            android:backgroundTint="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_centerVertical="true"
            android:textSize="18dp"
            android:text="Le Thanh Trong" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/class_time_text"
            android:backgroundTint="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="85dp"
            android:textSize="18dp"
            android:textStyle="italic"
            android:text="Tiáº¿t: " />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/class_time"
            android:backgroundTint="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="85dp"
            android:textSize="18sp"
            android:textStyle="italic"
            android:text="2-5, thu nam" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp">

        <FrameLayout
            android:id="@+id/detail_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/btn_danh_sach_lop"
            android:layout_marginBottom="15dp" />

        <Button
            android:id="@+id/btn_danh_sach_lop"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            app:labelVisibilityMode="labeled"
            android:text="DANH SACH LOP"
            />
    </RelativeLayout>

</LinearLayout>