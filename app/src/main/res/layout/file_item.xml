<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="80dp"
    android:layout_marginTop="15dp"
    android:layout_marginLeft="30dp">

    <LinearLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="8dp"

        android:background="@drawable/edittext_border"
        android:backgroundTint="#E0FFFF"
        android:gravity="center_vertical"
        android:padding="10dp">

        <ImageView
            android:id="@+id/DOCUMENT_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:src="@drawable/ic_doc_text" />

        <TextView
            android:id="@+id/document_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BAI TAP OOP"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/document_description"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/document_text"
            android:layout_marginTop="8dp"
            android:text="This is a description of the document."
            android:textColor="@color/black"
            android:textSize="14dp" />

    </LinearLayout>


</RelativeLayout>