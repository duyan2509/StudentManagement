<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:orientation="vertical"
    android:background="#EEEEEE"
    tools:context=".StudentDetailClassAssignmentFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_back"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:layout_centerVertical="true"
            android:textSize="25dp"
            android:textStyle="bold"
            android:text="My Classes"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="10dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="350dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:background="@drawable/edittext_border"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/class_name"
            android:backgroundTint="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="50dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="SE330.O22 - Lap trinh java" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/class_gv"
            android:backgroundTint="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="50dp"
            android:layout_centerVertical="true"
            android:textSize="18dp"
            android:text="GVLT: " />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/class_gv_data"
            android:backgroundTint="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_centerVertical="true"
            android:textSize="18dp"
            android:text="Le Thanh Trong" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/class_time"
            android:backgroundTint="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="85dp"
            android:textSize="18dp"
            android:textStyle="italic"
            android:text="Tiáº¿t: " />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/class_time_data"
            android:backgroundTint="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="85dp"
            android:textSize="18dp"
            android:textStyle="italic"
            android:text="2-5, thu nam " />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_document"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_centerVertical="true"
            android:text="Documents"
            android:textColor="@color/black"
            android:background="@drawable/edittext_border"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_assignments"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_marginLeft="220dp"
            android:layout_centerVertical="true"
            android:text="Assignments"
            android:textColor="@color/white"
            android:backgroundTint="#1d5ef5"
            android:background="@drawable/edittext_border"/>
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="365dp"
        android:layout_marginTop="16dp"
        android:clipToPadding="false"
        android:paddingBottom="16dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white"
        android:layout_marginTop="0dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_danh_sach_lop"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btn_danhsachlop"/>
    </RelativeLayout>
</LinearLayout>