<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:orientation="vertical"
    android:background="#EEEEEE"
    tools:context=".DetailClassDocumentFragment"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_back"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:layout_centerVertical="true"
            android:textSize="25dp"
            android:textStyle="bold"
            android:text="My Classes"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="10dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="350dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:background="@drawable/edittext_border"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/class_name"
            android:backgroundTint="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="50dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="SE330.O22 - Lap trinh java" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/class_gv"
            android:backgroundTint="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="50dp"
            android:layout_centerVertical="true"
            android:textSize="18dp"
            android:text="GVLT: " />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/class_gv_data"
            android:backgroundTint="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_centerVertical="true"
            android:textSize="18dp"
            android:text="Le Thanh Trong" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/class_time"
            android:backgroundTint="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="85dp"
            android:textSize="18dp"
            android:textStyle="italic"
            android:text="Tiáº¿t: " />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/class_time_data"
            android:backgroundTint="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="85dp"
            android:textSize="18dp"
            android:textStyle="italic"
            android:text="2-5, thu nam " />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_document"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_centerVertical="true"
            android:text="Documents"
            android:textColor="@color/white"
            android:backgroundTint="@color/main_blue"
            android:background="@drawable/edittext_border"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_assignments"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_marginLeft="220dp"
            android:layout_centerVertical="true"
            android:text="Assignments"
            android:background="@drawable/edittext_border"/>
    </RelativeLayout>

<!--folder-->
    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        android:backgroundTint="#ADD8E6">

        <Button
            app:backgroundTint="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_documents"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="45dp"
            android:textColor="@color/black"
            android:text="17"
            android:textSize="15dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="45dp"
            android:textColor="@color/black"
            android:text="Items"
            android:textSize="15dp"/>
    </RelativeLayout>

<!--de cuong-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="280dp">

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white"
        android:layout_marginTop="0dp">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btn_danhsachlop"/>
    </RelativeLayout>
</LinearLayout>